<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>E-bookopolis</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>  
        <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'> 
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="css/order_history_details_style.css" rel="stylesheet" />
        <link href="css/common_style.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Navigation-->
        <div class="menu-bar">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="#!">E-bookopolis</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <form class="nav-link" action="/user/home" method="POST">
                            <button class="btn btn-outline-dark menu-button" type="submit">
                              Home
                            </button>
                        </form>
                       <li class="nav-item">
                           <form class="nav-link" action="/user/order_history" method="POST">
                                <button class="btn btn-outline-dark menu-button" type="submit">
                                 Order History
                                </button>
                           </form>
                       </li>
                       <li class="nav-item">
                               <form class="nav-link" action="/user/author" method="POST">
                                    <button class="btn btn-outline-dark menu-button" type="submit">
                                     Authors
                                    </button>
                               </form>
                        </li>
                        <li class="nav-item">
                            <form class="nav-link" action="/user/publisher" method="POST">
                                <button class="btn btn-outline-dark menu-button" type="submit">
                                     Publishers
                                </button>
                            </form>
                        </li>
                        <li class="nav-item">
                               <form class="nav-link" action="/user/blog" method="POST">
                                    <button class="btn btn-outline-dark menu-button" type="submit">
                                     Blog
                                    </button>
                               </form>
                        </li>
                    </ul>
                    <form class="d-flex" action="/user/user_profile" method="POST">
                            <button style="border: none; background: none;" type="submit">
                                <div class="greeting">Hello, <%=username %></div>
                            </button>
                    </form>
                    <form class="d-flex" action="/user/cart" method="POST">
                        <button class="btn btn-outline-dark menu-button" type="submit">
                            <i class="bi-cart-fill me-1"></i>
                            Cart
                            <span class="badge bg-dark text-white ms-1 rounded-pill"><%=cartAmount%></span>
                        </button>
                    </form>
                    <form class="nav-link" action="/user/wishlist" method="POST">
                            <button class="btn btn-outline-dark menu-button" type="submit">
                             <i class="fa-solid fa-heart"></i>
                             <span class="badge bg-dark text-white ms-1 rounded-pill"><%=wishlistAmount%></span>
                            </button>
                    </form>
                    <form class="nav-link" action="/user/search_page" method="POST" style="padding:0 0 0 0;">
                            <button class="btn btn-outline-dark menu-button" type="submit">
                             <i class="fas fa-search"></i>
                            </button>
                    </form>
                    <form class="nav-link" action="/user/logout" method="POST">
                        <button class="btn btn-outline-dark menu-button" type="submit">
                         Log Out
                        </button>
                    </form>
                </div>
            </div>
        </nav>
        </div>
        <!-- Header-->
        <header class="bg-dark banner">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">E-bookopolis</h1>
                    <p class="lead fw-normal text-white-50 mb-0">A Utopia Of Books</p>
                </div>
            </div>
        </header>
        <div style="text-align: center; font-size: 50px;">Order Details</div>
        <div  class="content">
            <div id="hid" style="visibility: hidden;">
                <div class="text-center text-black">
                    <h1 class="display-4 fw-bolder">E-bookoplois</h1>
                    <p class="lead fw-normal text-white-50 mb-0">A Utopia Of Books</p>
                </div>           
            </div>
            <!-- Section-->
            <% var date = data.rows[0][10] %>
            <% var dd = String(date.getDate()).padStart(2, '0') %>
            <% var mm = String(date.getMonth() + 1).padStart(2, '0') %>
            <% var yyyy = date.getFullYear() %>
            <% var h = String(date.getHours()).padStart(2, '0') %>
            <% var m = String(date.getMinutes()).padStart(2, '0') %>
            <% var s = String(date.getHours()).padStart(2, '0') %>
            <% date = dd + '/' + mm + '/' + yyyy + '  ' + h + ':' + m + ':' +s %>

            <% var sum=0 %>
            <% for (var i = 0; i < data.rows.length; i++) sum+=data.rows[i][5]*data.rows[i][7] %>
            <div >
                <div class="order-history-details-top">
                    <div class="order-history-details-top-item">UserID</div>
                    <div class="order-history-details-top-item"><%=data.rows[0][2]%></div>
                    <div class="order-history-details-top-item">Username</div>
                    <div class="order-history-details-top-item"><%=username%></div>
                    <div class="order-history-details-top-item">OrderID</div>
                    <div class="order-history-details-top-item"><%=data.rows[0][0]%></div>
                    <div class="order-history-details-top-item">Delivary Address</div>
                    <div class="order-history-details-top-item"><%=data.rows[0][6]%></div>
                    <div class="order-history-details-top-item">Purchase Date</div>
                    <div class="order-history-details-top-item"><%=date%></div>
                    <div class="order-history-details-top-item">Total Price</div>
                    <div class="order-history-details-top-item"><%=sum%>$</div>
                </div>

                <div class="order-history-details-table">
                    <div class="order-history-details-item" style="background: #D3D3D3;">Book Name</div>
                    <div class="order-history-details-item" style="background: #D3D3D3;">Amount</div>
                    <div class="order-history-details-item" style="background: #D3D3D3;">Price</div>
                    <% for (var i = 0; i < data.rows.length; i++) { %>

                    <div class="order-history-details-item"><%=data.rows[i][11] %> </div>
                    <div class="order-history-details-item"><%=data.rows[i][5] %> </div>
                    <div class="order-history-details-item"><%= data.rows[i][7].toFixed(2) %>$ * <%=data.rows[i][5]%> = <%= (data.rows[i][5]*data.rows[i][7]).toFixed(2) %>$ </div>
                    <% } %>
                </div>
            </div>
        </div>
        <div style="text-align: center;">
            <button class="btn btn-outline-dark download-button" id="download">
                Download Receipt
            </button>
        </div>
        <!-- Footer-->
        <footer class="py-5 bg-dark">
            <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2022</p></div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.3/jspdf.min.js"></script>
        <script src="https://html2canvas.hertzen.com/dist/html2canvas.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
        <!-- Core theme JS-->
        <!-- <script src="js/scripts.js"></script> -->
        <script>          
            $(document).ready(function(){
                $('#download').click(function(){
                    console.log("Clicked")
                    $("#hid").css("visibility","visible")
                    var HTML_Width = $(".content").width();
                    var HTML_Height = $(".content").height();
                    var top_left_margin = 15;
                    var PDF_Width = HTML_Width+(top_left_margin*2);
                    var PDF_Height = (PDF_Width*1.5)+(top_left_margin*2);
                    var canvas_image_width = HTML_Width;
                    var canvas_image_height = HTML_Height;
                    var totalPDFPages = Math.ceil(HTML_Height/PDF_Height)-1;
                    
                    PDF_Height*=.80

                    html2canvas($(".content")[0],{allowTaint:true}).then(function(canvas) {
                        canvas.getContext('2d');
                        console.log(canvas.height+"  "+canvas.width);
                        
                        
                        var imgData = canvas.toDataURL("image/jpeg", 1.0);
                        var pdf = new jsPDF('p', 'pt',  [PDF_Width, PDF_Height]);
                        pdf.addImage(imgData, 'JPG', top_left_margin, (PDF_Height-canvas_image_height)/2,canvas_image_width,canvas_image_height);
                        
                        
                        for (var i = 1;i <= totalPDFPages; i++) { 
                            pdf.addPage(PDF_Width, PDF_Height);
                            pdf.addImage(imgData, 'JPG', top_left_margin, -(PDF_Height*i)+(top_left_margin*4),canvas_image_width,canvas_image_height);
                        }
            
                        pdf.save("Receipt.pdf");
                        $("#hid").css("visibility","hidden")
                    });
                })
            })

        </script>
    </body>
</html>
