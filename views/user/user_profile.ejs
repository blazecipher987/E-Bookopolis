<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>E-bookopolis</title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
        <!-- Bootstrap icons-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="css/home_style.css" rel="stylesheet" />
        <link href="css/common_style.css" rel="stylesheet" />
    </head>
    <body>
        <!-- Navigation-->
        <div class="menu-bar">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container px-4 px-lg-5">
                    <a class="navbar-brand" href="#!">E-bookopolis</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                            <form class="nav-link" action="/user/home" method="POST">
                                <button class="btn btn-outline-dark menu-button" type="submit">
                                  Home
                                </button>
                            </form>
                           <li class="nav-item">
                               <form class="nav-link" action="/user/order_history" method="POST">
                                    <button class="btn btn-outline-dark menu-button" type="submit">
                                     Order History
                                    </button>
                               </form>
                           </li>
                           <li class="nav-item">
                               <form class="nav-link" action="/user/author" method="POST">
                                    <button class="btn btn-outline-dark menu-button" type="submit">
                                     Authors
                                    </button>
                               </form>
                           </li>
                           <li class="nav-item">
                               <form class="nav-link" action="/user/publisher" method="POST">
                                    <button class="btn btn-outline-dark menu-button" type="submit">
                                     Publishers
                                    </button>
                               </form>
                           </li>
                           
                            <li class="nav-item">
                               <form class="nav-link" action="/user/blog" method="POST">
                                    <button class="btn btn-outline-dark menu-button" type="submit">
                                     Blog
                                    </button>
                               </form>
                           </li>
                        </ul>
                        <form class="d-flex" action="/user/user_profile" method="POST">
                            <button style="border: none; background: none;" type="submit">
                                <div class="greeting">Hello, <%=username %></div>
                            </button>
                        </form>
                        <form class="d-flex" action="/user/cart" method="POST">
                            <button class="btn btn-outline-dark menu-button"  type="submit">
                                <i class="bi-cart-fill me-1"></i>
                                Cart
                                <span class="badge bg-dark text-white ms-1 rounded-pill"><%=cartAmount%></span>
                            </button>
                        </form>
                        <form class="nav-link" action="/user/wishlist" method="POST">
                            <button class="btn btn-outline-dark menu-button" type="submit">
                             <i class="fa-solid fa-heart"></i>
                             <span class="badge bg-dark text-white ms-1 rounded-pill"><%=wishlistAmount%></span>
                            </button>
                        </form>
                        <form class="nav-link" action="/user/search_page" method="POST" style="padding:0 0 0 0;">
                            <button class="btn btn-outline-dark menu-button" type="submit">
                             <i class="fas fa-search"></i>
                            </button>
                        </form>
                        <form class="nav-link" action="/user/logout" method="POST">
                            <button class="btn btn-outline-dark menu-button" type="submit">
                             Log Out
                            </button>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Header-->
        <header class="bg-dark banner">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">E-bookoplois</h1>
                    <p class="lead fw-normal text-white-50 mb-0">A Utopia Of Books</p>
                </div>
            </div>
        </header>
        <div style="text-align: center; font-size: 50px;">User Profile</div>
        <!-- Section-->
        <div class="container">
            <div class="main-body">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <% if (userdata.rows[0][4]==="Male") { %>
                                    <img src="https://bootdey.com/img/Content/avatar/avatar6.png" alt="Admin"
                                        class="rounded-circle p-1 bg-primary" width="110">
                                    <% } else { %>
                                    <img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="Admin"
                                        class="rounded-circle p-1 bg-primary" width="110">
                                    <% } %>
                                    <div class="mt-3">
                                        <h4><%=userdata.rows[0][1]%></h4>

                                        <form class="nav-link" action="/user/order_history" method="POST">
                                            <button class="btn btn-outline-dark menu-button" type="submit">
                                                Order History
                                            </button>
                                        </form>
                                        <form class="nav-link" action="/user/wishlist" method="POST">
                                            <button class="btn btn-outline-dark menu-button" type="submit">
                                                Wishlist
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <hr class="my-4">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <form action="/user/user_profile/save_changes" method="POST">
                        <div class="card">
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Full Name</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" value="<%=userdata.rows[0][1]%>" name="username" class="form-control" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="email" value="<%=userdata.rows[0][2]%>" name="email" class="form-control" required>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Gender</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" value="<%=userdata.rows[0][4]%>" name="gender" class="form-control" required readonly>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Mobile</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="number" step="1" value="<%=userdata.rows[0][5]%>" name="mobile" class="form-control" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Delivary Address</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" value="<%=userdata.rows[0][6]%>" name="address" class="form-control" required>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-3"></div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="submit" class="btn btn-primary px-4" value="Save Changes">
                                    </div>
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div style="margin-bottom: 50px;"></div>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2022</p>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <!-- Core theme JS-->
    <!-- <script src="js/scripts.js"></script> -->
    <script type="text/javascript">
        if(<%=alert%>===51){
                swal("Success","User Profile Updated","success")
        }
        else if(<%=alert%>===52){
                swal("Oops","User Name Already Exists","error")
        }
        document.addEventListener("DOMContentLoaded", function (event) {
            var scrollpos = sessionStorage.getItem('scrollpos');
            if (scrollpos) {
                window.scrollTo(0, scrollpos);
                sessionStorage.removeItem('scrollpos');
            }
        });

        window.addEventListener("beforeunload", function (e) {
            sessionStorage.setItem('scrollpos', window.scrollY);
        });
    </script>

</body>

</html>